            @Html.DisplayFor(modelItem => item.QueQuan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiemThi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaiKhoan.TenTaiKhoan)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaSV }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaSV }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaSV })
